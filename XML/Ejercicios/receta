<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE receta [
  <!ELEMENT receta (nombreplato,autor,tiempomedio,ingrediente+,instrucciones)>
  <!ELEMENT nombreplato (#PCDATA)>
  <!ELEMENT autor (#PCDATA)>
  <!ELEMENT tiempomedio (#PCDATA)>
  <!ELEMENT ingrediente (#PCDATA)>
  
  
  <!ELEMENT instrucciones (paso+)>
  <!ELEMENT paso (descripciones,tiempo)>
  <!ELEMENT descripciones (#PCDATA)>
  <!ELEMENT tiempo (#PCDATA)>
]>